<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do List</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <link rel="icon" href="/list.svg">
    <link rel="stylesheet" href="/styles/styles.css" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="scripts/todo.js"></script>
    <script src="scripts/modal-controller.js"></script>
    <script src="scripts/table-pagination.js"></script>
</head>
<body>
    <section class="todo-list">
        <table class="content-table table-sortable">
            <thead>
                <tr>
                    <th>Task name</th>
                    <th>Priority</th>
                    <th>Done</th>
                </tr>
            </thead>
            <tbody>
                <col span="1" class="wide-col">
                <%for(var i = 0; i < todos.length; i++)
                { %>
                <tr>
                    <td><%= todos[i].taskName%></td>
                    <td><%= todos[i].taskPriority%></td>
                    <td>
                        <input type="checkbox"/>
                        <button class="delete-btn" id="<%= todos[i].taskName %>">
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>
                </tr>
                <% } %>
            </tbody>
            <tfoot id="footer">
                <tr>
                    <td colspan="3">
                        Rows per page:
                        <select id="max-rows">
                            <option value="5">5</option>
                            <option value="10">10</option>
                            <option value="15" selected>15</option>
                        </select>
                    
                        <span class="task-no-from">1</span> - <span class="task-no-to">5</span> of <span class="tasks-no">11</span>
                        <button class="prev-page"><i class="fa fa-angle-left" aria-hidden="true"></i></button>
                        <button class="next-page"><i class="fa fa-angle-right" aria-hidden="true"></i></button>
                    </td>
                </tr>
            </tfoot>
        </table>
        <button class="add-task-btn">ADD TASK</button>
    </section>
    <div class="bg-modal">
        <div class="modal-content">
            <div class="close-modal">+</div>
            <h2>Add a task</h2>
            <form class="todolist-form">
                <label for="task-name">Task name</label>
                <input type="text" name="task-name" id="task-name" required>
                <label for="task-priority">Priority</label>
                <input type="text" name="task-priority" id="task-priority" required>
                <button type="submit">ADD</button>
            </form>
        </div>
    </div>
</body>
</html>